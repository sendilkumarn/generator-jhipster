import reactor.core.publisher.Flux;
import reactor.core.publisher.Mono;

import java.io.IOException;
import java.util.List;

import <%= packageName %>.domain.User;

public class UserRepository {



    <% if (prodDatabaseType === 'mongodb') { %><% } else if (prodDatabaseType === 'r2dbc') { %><% } %>
    private final <% if (prodDatabaseType === 'mongodb') { %>ReactiveMongoOperations<% } else if (prodDatabaseType === 'r2dbc') { %>R2dbcEntityOperations<% } %> operations;

    <%_ if (prodDatabaseType === 'mongodb') { _%>
    private final ObjectMapper objectMapper;
    <%_ } _%>

    public UserRepository(<% if (prodDatabaseType === 'mongodb') { %>ReactiveMongoOperations<% } else if (prodDatabaseType === 'r2dbc') { %>R2dbcEntityOperations<% } %> operations<% if (prodDatabaseType === 'mongodb') { %>, ObjectMapper objectMapper<% } %>) {
        this.operations = operations;
        <%_ if (prodDatabaseType === 'mongodb') { _%>
        this.objectMapper = objectMapper;
        <%_ } _%>
    }

    public Mono<Long> count() {
        return operations.count(<% if (prodDatabaseType === 'mongodb') { %>new Query()<% } else if (prodDatabaseType === 'r2dbc') { %>empty()<% } %>, User.class);
    }

    public Flux<User> findAll() {
        <%_ if (prodDatabaseType === 'mongodb') { _%>
        return operations.findAll(User.class);
        <%_ } else if (prodDatabaseType === 'r2dbc') { _%>
        return operations.select(empty(), User.class);
        <%_ } _%>
    }

    public Mono<User> findOne(String id) {
        <%_ if (prodDatabaseType === 'mongodb') { _%>
        return operations.findById(id, User.class);
        <%_ } else if (prodDatabaseType === 'r2dbc') { _%>
        return operations.select(User.class).matching(query(where("login").is(id))).one();
        <%_ } _%>
    }

    <%_ if (prodDatabaseType === 'mongodb') { _%>
    public ReactiveRemoveOperation.ReactiveRemove<User> deleteAll() {
      return operations.remove(User.class);
    }
    <%_ } else  if (prodDatabaseType === 'r2dbc') { _%>
    public Mono<Void> deleteAll() {
      return operations.delete(User.class).all().then();
    }
    <%_ } _%>

    public Mono<User> save(User user) {
        <%_ if (prodDatabaseType === 'mongodb') { _%>
        return operations.save(user);
        <%_ } else if (prodDatabaseType === 'r2dbc') { _%>
        return operations.insert(user);
        <%_ } _%>
    }
}
